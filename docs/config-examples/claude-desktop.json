{
  "mcpServers": {
    "docs": {
      "command": "python",
      "args": [
        "-m",
        "docs_mcp"
      ],
      "env": {
        "DOCS_ROOT": "/absolute/path/to/your/docs",
        "MCP_DOCS_CACHE_TTL": "3600",
        "MCP_DOCS_SEARCH_LIMIT": "10",
        "LOG_LEVEL": "INFO"
      }
    }
  }
}
